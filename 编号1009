#include <stdio.h>
#include <math.h>

int main()
{
    int num;
    scanf("%d", &num);
    int num2 = num;
    int num3 = num;
    int i = 0;
    if (num == 0)
    {
        i = 1;
    }
    while (num)
    {
        num /= 10;
        i++;
    }
    printf("%d\n", i);

    while(i > 0)
    {
        printf("%d ", num3/(int)pow(10, i-1));
        num3 %= (int)pow(10, i-1);
        i--;
    }
    //printf("%d", num3);
    printf("\n");
    while (num2 > 10)
    {
        printf("%d", num2%10);
        num2 /= 10;
    }
    printf("%d", num2);
    return 0;
}
